<fieldset {% include 'attributes.twig' %}>

    {%- if legend -%}
        <legend>{{- legend|e('html') -}}</legend>
    {%- endif -%}

    {% for option in options %}
        <label class="flex-label">
            <input type="radio"
                   name="{{ name|e('html_attr') }}"
                   value="{{ option.value|e('html_attr') }}"{{ value == option.value ? ' checked' : '' }} />
            <span class="flex-label-text">{{ option.label|e('html') }}</span>
        </label>
    {% endfor %}

</fieldset>